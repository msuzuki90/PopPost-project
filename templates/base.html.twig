<!DOCTYPE html>
<html class="dark">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Wohoo PopPost!
			{% endblock %}
		</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      	<link href="https://fonts.googleapis.com/css2?family=Alata&family=Josefin+Sans:wght@300&display=swap" rel="stylesheet"/>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>

	<body class="bg-gray-100 text-gray-800 m-10 dark:bg-gray-800 dark:text-white ">
		{# navbar start here #}
		<div class="container max-w-6xl mx-auto px-6 py-12">
    		<nav class="flex items-center justify-between font-bold">
        		<div class="flex items-center space-x-4 text-4xl group">
					<a href="{{ path('app_micro_post') }}" class="pb-2"> Home </a>
					<div class =" text-xl">
						{% block bread %} {% endblock %}
					</div>
        		</div>

				<div class="hidden h-10 font-alata md:flex md:space-x-8 text-m text-gray-500 dark:text-gray-400">
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<div class="group">
							<a href="{{ path('app_micro_post_add') }}">Add PopPost!</a>
						</div>
						<div class="group">
							<a href="{{ path('app_settings_profile') }}">Profile Settings</a>
						</div>
						<div class="group">
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
						{% if is_granted('ROLE_EDITOR') %}
							<div class="group">
								<a href="{{ path('admin') }}">BackOffice</a>
							</div>
						{% endif %}
					{% else %}
						<div class="group">
							<a href="{{ path('app_login') }}">Login</a>
						</div>
						<div class="group">
							<a href="{{ path('app_register') }}">Register</a>
						</div>
					{% endif %}
				</div>
        
				<div class="ml-2">
					<form action="{{ path('app_search') }}" method="GET" class="flex items-center p-4 rounded-lg shadow-lg">
						<input type="search" name="query" placeholder="Search..." class="w-full px-4 py-2 text-gray-700 bg-gray-200 border border-gray-300 rounded-l-lg focus:outline-none focus:bg-white focus:border-indigo-500" />
						<button type="submit" class="px-4 py-2 text-white bg-indigo-600 border border-indigo-600 rounded-r-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
							Search
						</button>
					</form>
				</div>
    		</nav>
		</div>

		{# NAV BAR END HERE #}

		<div class="w-full md:w-2/3 mx-auto">
			{% for message in app.flashes('success') %}
				<div class="rounded-md p-2 border-green-300 bg-green-50 border dark:border-green-600 dark:bg-green-700 dark:text-white mb-4">
					{{message}}
				</div>
			{% endfor %}
			{% block body %}{% endblock %}
		</div>
	</body>
</html>
