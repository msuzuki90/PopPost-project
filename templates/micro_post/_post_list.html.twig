    
{% if query is defined and query is not null %}
    <h2 class="text-2xl mb-4">search: '{{ query }}'</h2>
{% endif %}
    
<div class="flex flex-col items-center">
    {% if posts|length > 0 %}
        {% for post in posts %}
            {{include('micro_post/_post.html.twig',{post:post})}}
        {% endfor %}
    {% else %}
        There's nothing here...sniff
    {% endif %}
</div>
    
<div class="navigation flex justify-center mb-6">
    {{ knp_pagination_render(posts) }}
</div>