    
    {% if query is defined and query is not null %}
        <h2 class="text-2xl mb-4">Votre recherche : '{{ query }}'</h2>
    {% endif %}

    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4">
        {% if posts|length > 0 %}
            {% for post in posts %}
                {{include('micro_post/_post.html.twig',{post:post})}}
            {% endfor %}
        {% else %}
            There's nothing here...sniff
        {% endif %}
    </div>
    
    <div class="navigation">
        {{ knp_pagination_render(posts) }}
    </div>