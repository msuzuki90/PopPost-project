{# templates/micro_post/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}All Posts!{% endblock %}

{% block body %}
    {% include "nav.html.twig" %}

    {% set filter = filter | default('desc') %}
    <div class="mx-auto relative w-full text-gray-700 mt-7 mb-7 flex justify-center">
        <div id="filter-links" class="flex flex-col md:flex-row justify-between space-y-2 md:space-y-0 md:space-x-4">
            <a href="{{ path('app_filter', {'filter': 'desc'}) }}" class="flex items-center justify-center h-10 px-4 md:px-32 text-sm md:text-base placeholder-gray-600 appearance-none focus:shadow-outline {% if filter == 'desc' %}bg-blue-500 text-white{% else %}bg-white{% endif %}">
                Date DESC
            </a>
            <a href="{{ path('app_filter', {'filter': 'asc'}) }}" class="flex items-center justify-center h-10 px-4 md:px-32 text-sm md:text-base placeholder-gray-600 appearance-none focus:shadow-outline {% if filter == 'asc' %}bg-blue-500 text-white{% else %}bg-white{% endif %}">
                Date ASC
            </a>
        </div>
    </div>

    {{ include("micro_post/_post_list.html.twig") }}
{% endblock %}
