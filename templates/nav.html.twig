{# HERO CONTAINER #}
<div class="container max-w-6xl mx-auto py-16">
    {# NAV START #}
    <nav class="flex items-center justify-between font-bold">
        <div class="flex items-center space-x-4 text-4xl md:mr-10 px-6">
            <a href="{{ path('app_micro_post') }}" class="pb-2">Home</a>
        </div>

        <div class="hidden lg:flex h-10 font-alata md:space-x-3 text-gray-500 dark:text-gray-400">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="group text-center">
                    <a href="{{ path('app_micro_post_add') }}">Add PopPost!</a>
                    <div class="mx-2 group-hover:border-b group-hover:border-blue-50"></div>
                </div>
                <div class="group">
                    <a href="{{ path('app_profile', { id: app.user.id }) }}">{{ app.user.userProfile.name ?? app.user.email }}</a>
                    <div class="mx-2 group-hover:border-b group-hover:border-blue-50"></div>
                </div>
                <div class="group text-center">
                    <a href="{{ path('app_settings_profile') }}">Profile Settings</a>
                    <div class="mx-2 group-hover:border-b group-hover:border-blue-50"></div>
                </div>
                <div class="group text-indigo-400 font-bold">
                    <a href="{{ path('app_product_index') }}">Shop</a>
                    <div class="mx-2 group-hover:border-b group-hover:border-blue-50"></div>
                </div>
                <div class="group text-center text-green-600 font-bold">
                    <a href="{{ path('app_cart') }}">Cart</a>
                    <div class="mx-2 group-hover:border-b group-hover:border-blue-50"></div>
                </div>
                <div class="group">
                    <a href="{{ path('app_logout') }}">Logout</a>
                    <div class="mx-2 group-hover:border-b group-hover:border-blue-50"></div>
                </div>
                {% if is_granted('ROLE_EDITOR') %}
                    <div class="group">
                        <a href="{{ path('admin') }}">BackOffice</a>
                        <div class="mx-2 group-hover:border-b group-hover:border-blue-50"></div>
                    </div>
                {% endif %}
            {% else %}
                <div class="group">
                    <a href="{{ path('app_login') }}">Login</a>
                    <div class="mx-2 group-hover:border-b group-hover:border-blue-50"></div>
                </div>
                <div class="group">
                    <a href="{{ path('app_register') }}">Register</a>
                    <div class="mx-2 group-hover:border-b group-hover:border-blue-50"></div>
                </div>
            {% endif %}
            <div class="group">
                <form action="{{ path('app_search') }}" method="GET" class="flex items-center p-4 rounded-lg shadow-lg">
                    <input type="search" name="query" placeholder="Search..." class="w-full px-4 py-2 text-gray-700 bg-gray-200 border border-gray-300 rounded-l-lg focus:outline-none focus:bg-white focus:border-indigo-500" />
                    <button type="submit" class="px-4 py-2 text-white bg-indigo-600 border border-indigo-600 rounded-r-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                        Search
                    </button>
                </form>
            </div>
        </div>
        {# HAMBURGER BUTTON #}
        <div class="lg:hidden px-6">
            <button id="menu-btn" type="button" class="z-40 block hamburger lg:hidden focus:outline-none">
                <span class="hamburger-top"></span>
                <span class="hamburger-middle"></span>
                <span class="hamburger-bottom"></span>
            </button>
        </div>
    </nav>
    {# Mobile Menu #}
    <div id="menu" class="absolute top-0 left-0 hidden flex-col self-end w-full min-h-screen py-1 pt-40 pl-12 space-y-3 text-lg text-white uppercase bg-black">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_profile', { id: app.user.id }) }}">{{ app.user.userProfile.name ?? app.user.email }}</a>
            <a href="{{ path('app_micro_post_add') }}">Add PopPost!</a>
            <a href="{{ path('app_settings_profile') }}">Profile Settings</a>
            <a href="{{ path('app_product_index') }}">Shop</a>
            <a href="{{ path('app_cart') }}">Cart</a>
            <a href="{{ path('app_logout') }}">Logout</a>
            {% if is_granted('ROLE_EDITOR') %}
                <a href="{{ path('admin') }}">BackOffice</a>
            {% endif %}
        {% else %}
            <a href="{{ path('app_login') }}">Login</a>
            <a href="{{ path('app_register') }}">Register</a>
        {% endif %}
        {# Add search form to mobile menu #}
        <div class="pt-4">
            <form action="{{ path('app_search') }}" method="GET" class="flex flex-col px-4 rounded-lg shadow-lg bg-black">
                <input type="search" name="query" placeholder="Search..." class="w-full px-4 py-2 mb-2 text-gray-700 bg-gray-200 border border-gray-300 rounded-lg focus:outline-none focus:bg-white focus:border-indigo-500" />
                <button type="submit" class="px-4 py-2 text-white bg-indigo-600 border border-indigo-600 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    Search
                </button>
            </form>
        </div>
    </div>
</div>
