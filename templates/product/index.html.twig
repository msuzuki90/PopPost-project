{# templates/product/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    {% include "nav.html.twig" %}

    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold mb-6">Products</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for product in products %}
                <div class="max-w-sm rounded overflow-hidden shadow-lg bg-white">
                    <img class="w-full h-48 object-cover" src="{{ asset('uploads/product_images/' ~ product.picture) }}" alt="{{ product.name }}">
                    <div class="px-6 py-4">
                        <div class="text-2xl mb-2 text-indigo-700">{{ product.name }}</div>
                        <p class="text-gray-700 text-base">
                            {{ product.description }}
                        </p>
                    </div>
                    <div class="px-6 pt-4 pb-2">
                        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-black mr-2 mb-2">{{ (product.price / 100)|number_format(2, ',', ' ') }} â‚¬</span>
                        <a href="{{ path('product_show', { 'idProduct': product.id }) }}" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Voir le produit
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
