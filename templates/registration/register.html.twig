{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block bread %}
    â†’ Register!
{% endblock %}

{% block body %}

{% for flash_error in app.flashes('verify_email_error') %}
    <div class="rounded-md p-2 border-red-300 bg-red-50 border dark:border-red-600 dark:bg-red-700 dark:text-white mb-4" role="alert">{{ flash_error }}</div>
{% endfor %}

<section id="hero">
    {% include "nav.html.twig" %}
    <div class="max-w-6xl font-alata font-bold mx-auto ">
        {{ form_start(registrationForm) }}
            <div class="text-xl">
                Basic Information
            </div>
            <div class="text-gray-500 dark:text-white mb-4 pb-4 border-b border-gray-300">
                Shhhh keep it a secret ...
            </div>


            <div>
                {{form_label(registrationForm.email,'Your Email serves as Username', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-white font-medium'}})}}
                {{form_widget(registrationForm.email, {'attr': {'class':'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}})}}
                {{form_errors(registrationForm.email)}}
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    {{ form_label(registrationForm.firstName, 'First Name', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-white font-medium'}}) }}
                    {{ form_widget(registrationForm.firstName, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
                    {{ form_errors(registrationForm.firstName) }}
                </div>

                <div>
                    {{ form_label(registrationForm.lastName, 'Last Name', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-white font-medium'}}) }}
                    {{ form_widget(registrationForm.lastName, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
                    {{ form_errors(registrationForm.lastName) }}
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    {{ form_label(registrationForm.address, 'Address', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-white font-medium'}}) }}
                    {{ form_widget(registrationForm.address, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
                    {{ form_errors(registrationForm.address) }}
                </div>

                <div>
                    {{ form_label(registrationForm.postalCode, 'Code Postal', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-white font-medium'}}) }}
                    {{ form_widget(registrationForm.postalCode, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
                    {{ form_errors(registrationForm.postalCode) }}
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    {{form_label(registrationForm.plainPassword.first,'Password', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-white font-medium'}})}}
                    {{form_widget(registrationForm.plainPassword.first, {'attr': {'class':'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}})}}
                    {{form_errors(registrationForm.plainPassword.first)}}
                </div>

                <div>
                    {{form_label(registrationForm.plainPassword.second,'Please repeat your password', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-white font-medium'}})}}
                    {{form_widget(registrationForm.plainPassword.second, {'attr': {'class':'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}})}}
                    {{form_errors(registrationForm.plainPassword.second)}}
                </div>
            </div>
            
            <div class ="flex items-center mt-4 mb-4">
                {{ form_widget(registrationForm.agreeTerms, {'attr':{'class':'h-4 w-4 rounded border border-gray text-indigo-300 mr-2'}} )}}
                {{ form_label(registrationForm.agreeTerms, 'Agree to terms', {'label_attr':{'class':'text-sm text-gray-700 dark:text-white font-medium'}} )}}
            </div>

            <div class="text-xl mt-4">
                Your Profile
            </div>
            <div class="text-gray-500 dark:text-white mb-4 pb-4 border-b border-gray-300">
                Let us know more about you! You can change it anytime!
            </div>
        

            {{include('/settings_profile/_profile_form.html.twig',{ form: registrationForm.userProfile} )}}

            <button type='submit' class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">
                Register!
            </button>
        {{ form_end(registrationForm) }}

    </div>
    <div class="mt-2 text-center text-gray-600 dark:text-gray-400  ">
        Already have a PopPost account? <a href ="{{ path('app_login')}}" class=" text-indigo-600 dark:text-white hover:text-indigo-700 "> Login here </a>
    </div>


{% endblock %}
